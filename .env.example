# Environment variables for local development
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/plc_copilot
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/plc_copilot_test

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=your_assistant_id_here
OPENAI_VECTOR_STORE_ID=your_vector_store_id_here

# Security
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=true
ENVIRONMENT=development
API_V1_STR=/api/v1
PROJECT_NAME=PLC Copilot

# Sentry (optional)
SENTRY_DSN=

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://jonaspetersen.com"]

# File uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["application/pdf"]